<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ProcesarArchivoJSP</servlet-name>
        <jsp-file>/jsp/procesarArchivo.jsp</jsp-file>
        <multipart-config>
            <!-- Tamaño máximo por archivo: 10MB -->
            <max-file-size>10485760</max-file-size>
            <!-- Tamaño máximo de la petición completa: 15MB -->
            <max-request-size>15728640</max-request-size>
        </multipart-config>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProcesarArchivoJSP</servlet-name>
        <url-pattern>/jsp/procesarArchivo.jsp</url-pattern>
    </servlet-mapping>

</web-app>
